<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
  <%= image_tag "languages/#{I18n.locale.to_s.downcase}.jpg", class: 'flag-locale-selector' %>
  <span class="caret"></span>
</a>
<ul class="dropdown-menu">
  <% I18n.available_locales.each do |l| %>
      <% if l != I18n.locale %>
          <li><%= link_to locale: l.to_s  do %>
                <%= image_tag "languages/#{l.to_s.downcase}.jpg", class: 'flag-locale-selector'  %></li>
                <% end%>
      <% end %>
  <% end %>
</ul>