<%= simple_form_for(@address) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <div class="row">
        <div class="col-md-7 col-lg-8">
          <%= f.input :business_name,
                      input_html: {class: 'transparent-input'}, label: "#{t('address.business_name')}:",
                      :label_html => {:class => 'login-label'} %>
        </div>
        <div class="col-md-5 col-lg-4">
          <div class="container-fluid">
            <%= f.simple_fields_for :address_categories do |address_category| %>
                <%= render 'addresses/address_category_fields', :f => address_category %>
            <% end %>
            <%= link_to_add_association t('address.add_category'), f, :address_categories, class: 'btn btn-success  ' %>

          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <%= f.input :web_site,
                    input_html: {class: 'transparent-input'}, label: "#{t('address.web_site')}:",
                    :label_html => {:class => 'login-label'} %>
      </div>
      <div class="col-sm-6">
        <%= f.input :facebook_page,
                    input_html: {class: 'transparent-input'}, label: "#{t('address.facebook_page')}:",
                    :label_html => {:class => 'login-label'} %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-7">
        <%= f.input :email,
                    input_html: {class: 'transparent-input'}, label: "#{t('address.email')}:",
                    :label_html => {:class => 'login-label'} %>

      </div>
      <div class="col-sm-5">
        <%= f.input :phone,
                    input_html: {class: 'transparent-input'}, label: "#{t('address.phone')}:",
                    :label_html => {:class => 'login-label'} %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <%= f.input :description,
                    input_html: {class: 'transparent-input', maxlength: 500, rows: 5 }, label: "#{t('address.description')}:",
                    :label_html => {:class => 'login-label'} %>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-xs-8 col-sm-4">
        <div class="form-group required">
          <label class="control-label string required login-label" for="address_zip_code"><abbr title="required">*</abbr> <%= t('address.country') %>
          </label><br>
          <%= f.collection_select :country_id, Country.order(:name_en), :id, :name_native, {include_blank: false}, {class: 'form-control transparent-input country-select'} %>
        </div>
      </div>
      <div class="col-sm-2 col-xs-4">
        <%= f.input :state,
                    input_html: {class: 'transparent-input'}, label: "#{t('address.state')}:",
                    :label_html => {:class => 'login-label'} %>
      </div>
      <div class="col-sm-6">
        <%= f.input :city,
                    input_html: {class: 'transparent-input'}, label: "#{t('address.city')}:",
                    :label_html => {:class => 'login-label'} %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-5">
        <%= f.input :zip_code,
                    input_html: {class: 'transparent-input'}, label: "#{t('address.zip_code')}:",
                    :label_html => {:class => 'login-label'} %>
      </div>
      <div class="col-xs-7">

        <%= f.input :district,
                    input_html: {class: 'transparent-input'}, label: "#{t('address.district')}:",
                    :label_html => {:class => 'login-label'} %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <%= f.input :street,
                    input_html: {class: 'transparent-input'}, label: "#{t('address.street')}:",
                    :label_html => {:class => 'login-label'} %>
      </div>


      <div class="col-sm-6">
        <div class="row">
          <div class="col-xs-4">
            <%= f.input :number,
                        input_html: {class: 'transparent-input'}, label: "#{t('address.number')}:",
                        :label_html => {:class => 'login-label'} %>
          </div>
          <div class="col-xs-8">
            <%= f.input :complement,
                        input_html: {class: 'transparent-input'}, label: "#{t('address.complement')}:",
                        :label_html => {:class => 'login-label'} %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <%= f.input :reference_point,
                    input_html: {class: 'transparent-input', maxlength: 250, rows:3}, label: "#{t('address.reference_point')}:",
                    :label_html => {:class => 'login-label'} %>
      </div>
    </div>
