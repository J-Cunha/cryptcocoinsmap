<h1 class="text-center blue-header "><%= "#{t('devise.registrations.edit_account')}" %> </h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, input_html: { class: 'transparent-input' }, required: true, label: "#{t('devise.sessions.email')}:" , :label_html => { :class => 'login-label' }, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, input_html: { class: 'transparent-input', placeholder: ''  }, required: false,hint: "#{t('devise.registrations.new_password_hint')}", hint_html: {class: 'blue-70'},  label: "#{t('devise.registrations.new_password')}:" , :label_html => { :class => 'login-label' } %>
    <%= f.input :password_confirmation,input_html: { class: 'transparent-input' }, hint: "", hint_html: {class: 'blue-70'}, required: true,  label: "#{t('devise.registrations.new_password_confirmation')}:" , :label_html => { :class => 'login-label' } %>
    <%= f.input :current_password, input_html: { class: 'transparent-input', placeholder: '' }, autocomplete: "off", hint: "#{t('devise.registrations.current_password_hint')}",hint_html: {class: 'blue-70'}, required: false, label: "#{t('devise.registrations.current_password')}:" , :label_html => { :class => 'login-label' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,  t('devise.registrations.update'), class: 'btn btn-primary  login-btn' %>
  </div>
<% end %>



