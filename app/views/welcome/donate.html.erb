<div class="dashboard-container" id="world-background">
  <div class="container-fluid" , style="max-width: 1024px; margin-top: 70px">
    <h1 class="text-center blue-header "><%= t('navbar.donate') %></h1>
    <div class="row">
      <div class="col-sm-6 ">
        <h3 class="text-left blue-header "><%= t('donate_page.make_donation') %></h3>
        <div class="col-xs-12 ">
          <div class="row">
            <% @donate_infos.each do |donate_info| %>
                <table style="margin: 10px;">
                  <tbody>
                  <tr>
                    <td class="text-left" rowspan="2"><%= image_tag "coins_icons/#{donate_info.currency.name}.png" %>
                    </td>
                    <td style="padding: 10px 0 0 15px;">
                      <label class="login-label"><%= donate_info.currency.name%></label></td>
                    <td rowspan="2"><%= link_to (image_tag 'qr_code.png', height: 64, width: 64), root_path %>
                  </tr>
                  <tr>
                    <td class="blue-70" style="padding: 0px 10px 15px 15px;"><%= donate_info.address %></td>
                  </tr>
                  </tbody>
                </table>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="row" style="padding-left: 25px;">
          <div class="col-xs-12  " >
            <h3 class="text-left  blue-header "><%= t('donate_page.share') %></h3>
            <br>

            <iframe src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2FCryptocoinsmap%2F&tabs&width=340&height=214&small_header=false&adapt_container_width=true&hide_cover=false&show_facepile=true&appId=465876620412327" width="340" height="214" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true"></iframe>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
