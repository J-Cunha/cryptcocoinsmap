<div class="world-background" id="world-background">
  <div class="container-fluid" , style="max-width: 1024px; margin-top: 70px">
    <h1 class="text-center blue-header "><%= t('navbar.donate') %></h1>
    <div class="row">
      <div class="col-sm-6 ">
        <h3 class="text-center blue-header "><%= t('donate_page.make_donation') %></h3>
        <div class="col-xs-12 ">
          <div class="row">
            <% @donate_infos.each do |donate_info| %>
                <table style="margin: 10px;">
                  <tbody>
                  <tr>
                    <td class="text-left" rowspan="2"><%= image_tag "coins_icons/#{donate_info.currency.name}.png" %>
                    </td>
                    <td style="padding: 10px 0 0 15px;">
                      <label class="login-label"><%= donate_info.currency.name%></label></td>
                    <td rowspan="2"><%= link_to (image_tag 'qr_code.png', height: 64, width: 64), root_path %>
                  </tr>
                  <tr>
                    <td class="blue-70" style="padding: 0px 10px 15px 15px;"><%= donate_info.address %></td>
                  </tr>
                  </tbody>
                </table>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="row">
          <div class="col-xs-12">
            <h2 class="text-left blue-header "><%= t('donate_page.share') %></h2>
            <div id="fb-root"></div>
            <div class="fb-share-button" data-href="https://www.facebook.com/Cryptocoinsmap/" data-layout="button" data-size="large" data-mobile-iframe="false">
              <a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.facebook.com%2FCryptocoinsmap%2F&amp;src=sdkpreparse"><%= t('donate_page.facebook_share') %></a>
            </div>
            <script>(function (d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) return;
                js = d.createElement(s);
                js.id = id;
                js.src = "//connect.facebook.net/pt_BR/sdk.js#xfbml=1&version=v2.10&appId=465876620412327";
                fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));</script>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <h2 class="text-left blue-header "><%= t('donate_page.answer') %></h2>
            divulgue
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
